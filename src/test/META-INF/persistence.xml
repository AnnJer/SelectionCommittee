<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence" version="2.0">

    <persistence-unit name="NewPersistenceUnit">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        <class>com.kpi.javaee.servlet.entities.ApplicationEntity</class>
        <class>com.kpi.javaee.servlet.entities.FacultyEntity</class>
        <class>com.kpi.javaee.servlet.entities.RateFactorCoefficientEntity</class>
        <class>com.kpi.javaee.servlet.entities.RateFactorResultEntity</class>
        <class>com.kpi.javaee.servlet.entities.SelectionRoundEntity</class>
        <class>com.kpi.javaee.servlet.entities.SessionsEntity</class>
        <class>com.kpi.javaee.servlet.entities.StatementEntity</class>
        <class>com.kpi.javaee.servlet.entities.SubjectEntity</class>
        <class>com.kpi.javaee.servlet.entities.UserEntity</class>
        <properties>
            <property name="hibernate.connection.url" value="jdbc:postgresql://localhost:5432/selectioncommittee"/>
            <property name="hibernate.connection.driver_class" value="org.postgresql.Driver"/>
            <property name="hibernate.connection.username" value=""/>
            <property name="hibernate.connection.password" value=""/>
            <property name="hibernate.archive.autodetection" value="class"/>
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.format_sql" value="true"/>
            <property name="hbm2ddl.auto" value="update"/>
        </properties>
    </persistence-unit>
</persistence>
