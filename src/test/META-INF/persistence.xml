<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence" version="2.0">

    <persistence-unit name="NewPersistenceUnit">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        <class>com.kpi.javaee.servlet.entities.ApplicationsEntity</class>
        <class>com.kpi.javaee.servlet.entities.FacultiesEntity</class>
        <class>com.kpi.javaee.servlet.entities.RateFactorCoefficientsEntity</class>
        <class>com.kpi.javaee.servlet.entities.RateFactorResultsEntity</class>
        <class>com.kpi.javaee.servlet.entities.SelectionRoundsEntity</class>
        <class>com.kpi.javaee.servlet.entities.SessionsEntity</class>
        <class>com.kpi.javaee.servlet.entities.StatementsEntity</class>
        <class>com.kpi.javaee.servlet.entities.SubjectsEntity</class>
        <class>com.kpi.javaee.servlet.entities.UsersEntity</class>
        <properties>
            <property name="hibernate.connection.url" value="jdbc:postgresql://localhost:5432/selectioncommittee"/>
            <property name="hibernate.connection.driver_class" value="org.postgresql.Driver"/>
            <property name="hibernate.connection.username" value=""/>
            <property name="hibernate.connection.password" value=""/>
            <property name="hibernate.archive.autodetection" value="class"/>
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.format_sql" value="true"/>
            <property name="hbm2ddl.auto" value="update"/>
        </properties>
    </persistence-unit>
</persistence>
